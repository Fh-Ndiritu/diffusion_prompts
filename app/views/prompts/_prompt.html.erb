<div id="<%= dom_id prompt %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Split:</strong>
    <%= prompt.split_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Row idx:</strong>
    <%= prompt.row_idx %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= prompt.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Truncated cells:</strong>
    <%= prompt.truncated_cells %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Partial:</strong>
    <%= prompt.partial %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this prompt", prompt, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this prompt", edit_prompt_path(prompt), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
