<div class="w-full mb-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">All Prompts</h1>
  </div>

  <%= render "layouts/search", locals: {splits: @splits} %>

    <%= turbo_frame_tag "prompts" do %>
        <div id="prompts" class="min-w-full overflow-y-scroll rounded-lg bg-slate-300 border-4 border-slate-300  p-4 my-4">
          <%= render @prompts %>
        </div>
    <% end %>
    <div class="flex justify-center items-center py-4">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
    </div>
</div>
